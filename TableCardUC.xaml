<UserControl x:Class="SynthesisSequenceGenerator.TableCardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthesisSequenceGenerator"
             mc:Ignorable="d" FontSize="16" FontFamily="Consolas" Background="WhiteSmoke" Loaded="UserControl_Loaded">
    <UserControl.DataContext>
        <local:ModelTableCard/>
    </UserControl.DataContext>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="{Binding ColumnWidth}"/>
            <ColumnDefinition Width="{Binding ColumnWidth}"/>
            <ColumnDefinition Width="{Binding ColumnWidth}"/>
            <ColumnDefinition Width="{Binding ColumnWidth}"/>
            <ColumnDefinition Width="{Binding ColumnWidth}"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Path=Key}"/>
                <TextBlock Text="{Binding Path=Index}" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="3" FontSize="14" VerticalAlignment="Bottom"/>
                <TextBlock Text="Q"/>
                <TextBlock Text="4" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="00" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="01" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="11" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="10" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" Grid.RowSpan="4"  BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Bottom"/>
                <TextBlock Text="Q"/>
                <TextBlock Text="2" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="00" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="2" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="2" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="2" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="3" Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="01" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="3" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="3" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="3" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="4" Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="11" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="4" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="4" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="4" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="4" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="5" Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="10" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="5" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="5" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="5" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
        </Border>
        <Border Grid.Row="5" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
        </Border>
    </Grid>
</UserControl>
