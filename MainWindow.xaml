<Window x:Class="SynthesisSequenceGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynthesisSequenceGenerator"
        mc:Ignorable="d" FontSize="18" FontFamily="Consolas"
        Title="Синтез генератора последовательностей" Height="568" Width="478" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <local:ModelGenerator/>
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
        <local:StateToHexConverter x:Key="StateToHexConv"/>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" BorderThickness="1" BorderBrush="Gray">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="16" Margin="5,5,5,0"/>
                <TextBlock Text="CC" Margin="5,0,5,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" BorderThickness="1" BorderBrush="Gray">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="10" Margin="5,5,5,0"/>
                <TextBlock Text="CC" Margin="5,0,5,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="8" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="Состояния триггеров" HorizontalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="10" Grid.ColumnSpan="8" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Gray">
            <TextBlock Text="Функции возбуждения" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="4" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="t" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="4" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="t+1" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="2" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="3" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="2" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="4" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="3" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="5" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="4" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="6" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="7" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="2" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="8" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="3" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="9" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Q"/>
                <TextBlock Text="4" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="10" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="J"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="11" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="K"/>
                <TextBlock Text="1" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="12" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="J"/>
                <TextBlock Text="2" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="13" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="K"/>
                <TextBlock Text="2" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="14" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="J"/>
                <TextBlock Text="3" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="15" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="K"/>
                <TextBlock Text="3" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="16" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="J"/>
                <TextBlock Text="4" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="17" BorderThickness="1" BorderBrush="Gray">
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="K"/>
                <TextBlock Text="4" FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="18" BorderThickness="0" BorderBrush="Gray">
            <ListView ItemsSource="{Binding Sequenses}">
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource myHeaderStyle}">
                        <GridViewColumn Width="32">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Index, StringFormat='X'}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="32">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Index}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Q1}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Q2}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Q3}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Q4}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Qn1}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Qn2}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Qn3}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="32">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Qn4}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=J1}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=K1}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=J2}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=K2}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=J3}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=K3}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=J4}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="24">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=K4}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>
